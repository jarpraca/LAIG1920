    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="800" angle="30">
            <from x="250" y="200" z="0" />
            <to x="10" y="40" z="0" />
        </perspective>

        <perspective id="secondCamera" near="0.1" far="500" angle="30">
