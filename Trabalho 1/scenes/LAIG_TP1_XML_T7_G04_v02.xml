<lxs>
    <scene root="plane" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="200" y="100" z="200" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.9" g="0.9" b="0.9" a="1.0" />
        <background r="0.0" g="0.5" b="0.9" a="1.0" />
    </globals>

    <lights>
        <omni id="main_light" enabled="1">
            <location x="20" y="20" z="0" w="1.0" />
            <ambient r="1" g="1" b="1" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/rocks.jpg" />
    </textures>

    <materials>
        <material id="plane_white" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.3" g="0.3" b="0.3" a="1.0" />
            <diffuse r="0.3" g="0.3" b="0.3" a="1.0" />
            <specular r="0.8" g="0.8" b="0.8" a="1.0" />
        </material>

        <material id="plane_blue" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.1" g="0.1" b="0.3" a="1.0" />
            <diffuse r="0.1" g="0.1" b="0.3" a="1.0" />
            <specular r="0.8" g="0.8" b="0.8" a="1.0" />
        </material>

        <material id="plane_black" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.05" g="0.05" b="0.05" a="1.0" />
            <diffuse r="0.1" g="0.1" b="0.1" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="rotate_to_x">
            <rotate axis="y" angle="90" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="0" y1="0" x2="4" y2="1" />
        </primitive>

        <primitive id="triangle_wheel_back">
            <triangle x1="0" y1="0" x2="4" y2="0" x3="2" y3="-1"/>
        </primitive>

        <primitive id="triangle_wheel_front">
            <triangle x1="0" y1="0" x2="2" y2="0" x3="1" y3="-4"/>
        </primitive>

        <primitive id="triangle_wing_main">
            <triangle x1="0" y1="0" x2="0" y2="10" x3="8" y3="0"/>
        </primitive>

        <primitive id="triangle_wing_back">
            <triangle x1="0" y1="0" x2="0" y2="6" x3="6" y3="0"/>
        </primitive>

        <primitive id="cylinder_main">
            <cylinder slices="20" stacks="10" radiusBottom="8" radiusTop="8" height="20"/>
        </primitive>

        <primitive id="cylinder_front">
            <cylinder slices="20" stacks="10" radiusBottom="8" radiusTop="4" height="8"/>
        </primitive>

        <primitive id="cylinder_back">
            <cylinder slices="20" stacks="10" radiusBottom="4" radiusTop="8" height="12"/>
        </primitive>

        <primitive id="cylinder_tail">
            <cylinder slices="20" stacks="10" radiusBottom="1" radiusTop="2" height="2"/>
        </primitive>

        <primitive id="cylinder_engine">
            <cylinder slices="20" stacks="10" radiusBottom="4" radiusTop="6" height="2"/>
        </primitive>

        <primitive id="sphere">
            <sphere slices="50" stacks="50" radius="2"/>
        </primitive>

        <primitive id="torus_engine">
            <torus slices="20" loops="20" inner="2" outer="6"/>
        </primitive>

        <primitive id="torus_wheel">
            <torus slices="20" loops="20" inner="0.25" outer="0.75"/>
        </primitive>
    </primitives>

    <components>
        <!-- BODY -->
        <component id="main">
            <transformation>
                <translate x="0" y="0" z="14" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="cylinder_main" />
            </children>
        </component> 

        <component id="front">
            <transformation>
                <translate x="0" y="0" z="34" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="cylinder_front" />
            </children>
        </component> 

        <component id="back">
            <transformation>
                <translate x="0" y="0" z="2" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="cylinder_back" />
            </children>
        </component> 

        <component id="tip">
            <transformation>
                <translate x="0" y="0" z="42" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="sphere" />
            </children>
        </component> 

        <component id="tail">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="cylinder_tail" />
            </children>
        </component> 

        <component id="body">
            <transformation>
                <transformationref id="rotate_to_x" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <componentref id="main" />
                <componentref id="front" />
                <componentref id="back" />
                <componentref id="tip" />
                <componentref id="tail" />
            </children>
        </component>  

        <!-- WINGS--> 
        <component id="wing_side_right">
            <transformation>
                <translate x="22" y="8" z="4" />
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="triangle_wing_main" />
            </children>
        </component> 

        <component id="wing_side_left">
            <transformation>
                <translate x="22" y="8" z="-4" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="triangle_wing_main" />
            </children>
        </component> 

        <component id="wing_back_right">
            <transformation>
                <translate x="6" y="8" z="2" />
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="triangle_wing_back" />
            </children>
        </component> 

        <component id="wing_back_left">
            <transformation>
                <translate x="6" y="8" z="-2" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="triangle_wing_back" />
            </children>
        </component> 

        <component id="wing_back_top">
            <transformation>
                <translate x="6" y="10" z="0" />
            </transformation>
            <materials>
                <material id="plane_blue" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="triangle_wing_back" />
            </children>
        </component> 

        <component id="engine_right">
            <transformation>
                <translate x="24" y="6" z="9" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="cylinder_engine" />
            </children>
        </component>

        <component id="engine_left">
            <transformation>
                <translate x="24" y="6" z="-9" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="cylinder_engine" />
            </children>
        </component> 

        <component id="engine_border_right">
            <transformation>
                <translate x="30" y="6" z="9" />
            </transformation>
            <materials>
                <material id="plane_blue" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="torus_engine" />
            </children>
        </component> 

        <component id="engine_border_left">
            <transformation>
                <translate x="30" y="6" z="-9" />
            </transformation>
            <materials>
                <material id="plane_blue" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="torus_engine" />
            </children>
        </component>

        <component id="engines">
            <transformation>
                <transformationref id="rotate_to_x" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <componentref id="engine_right" />
                <componentref id="engine_left" />
                <componentref id="engine_border_right" />
                <componentref id="engine_border_left" />
            </children>
        </component>  

        <component id="wings">
            <transformation>
                <translate x="0" y="0" z="0" />                
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <componentref id="wing_side_right" />
                <componentref id="wing_side_left" />
                <componentref id="wing_back_right" />
                <componentref id="wing_back_left" />
                <componentref id="wing_back_top" />
                <componentref id="engines" />
            </children>
        </component> 

        <!-- WHEELS-->
        <component id="holder_back_top_right">
            <transformation>
                <translate x="15" y="3" z="2" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="holder_back_bottom_right">
            <transformation>
                <translate x="15" y="3" z="2" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="triangle_wheel_back" />
            </children>
        </component>

        <component id="wheel_back_right">
            <transformation>
                <translate x="17" y="1" z="2" />
            </transformation>
            <materials>
                <material id="plane_black" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="torus_wheel" />
            </children>
        </component>

        <component id="holder_back_top_left">
            <transformation>
                <translate x="15" y="3" z="-2" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="holder_back_bottom_left">
            <transformation>
                <translate x="15" y="3" z="-2" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="triangle_wheel_back" />
            </children>
        </component>

        <component id="wheel_back_left">
            <transformation>
                <translate x="17" y="1" z="-2" />
            </transformation>
            <materials>
                <material id="plane_black" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="torus_wheel" />
            </children>
        </component>

        <component id="holder_front">
            <transformation>
                <translate x="37" y="6" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="triangle_wheel_front" />
            </children>
        </component>

        <component id="wheel_front">
            <transformation>
                <translate x="38" y="1" z="0" />
            </transformation>
            <materials>
                <material id="plane_black" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="torus_wheel" />
            </children>
        </component>

        <component id="wheels">
            <transformation>
                <translate x="0" y="0" z="0" />                
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <componentref id="holder_back_top_right" />
                <componentref id="holder_back_bottom_right" />
                <componentref id="wheel_back_right" />
                <componentref id="holder_back_top_left" />
                <componentref id="holder_back_bottom_left" />
                <componentref id="wheel_back_left" />
                <componentref id="holder_front" />
                <componentref id="wheel_front" />
            </children>
        </component> 

        <!-- PLANE -->
        <component id="plane">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="plane_white" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="wheels" />
                <componentref id="body" />
                <componentref id="wings" />
            </children>
        </component>
    </components>
</lxs>